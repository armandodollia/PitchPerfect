<!DOCTYPE html>
<html>
  <head>
    <title>PitchPerfect</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
      <nav>
        <div class="nav-wrapper">
          <%= link_to 'PitchPerfect', root_path, class: 'brand-logo' %>
          <ul id="nav-mobile" class="right">
            <li><%= link_to 'home', root_path %></li>
            <% if logged_in? %>
              <li><%= link_to 'logout', session_path(current_user), method: :delete %></li>
                <% if admin? %>
                  <li><%= link_to 'add admin', new_admin_path %></li>
                <% end %>
            <% else %>
              <li><%= link_to 'login', root_path %></li>
              <li><%= link_to 'register', root_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <%= yield %>

    </div>
  </body>
</html>
