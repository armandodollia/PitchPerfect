<% if @pitch.errors.empty? %>
  $('.pitch-list').append("<%= j render(@pitch) %>");
  $('#new_pitch').trigger('reset');
  $('#add_pitch_form_container').addClass('hide');
  $('#show_pitch_form_button').removeClass('hide');
<% else%>
  alert("<%=	@pitch.errors.full_messages.join(", ").html_safe %>");
<% end %>