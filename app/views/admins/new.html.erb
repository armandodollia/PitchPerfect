<h1>Add Another Admin</h1>

  <div class="row">
  	 <% if @errors %>
        <ul>
          <% @errors.each do |error| %>
              <li><%= error %></li>
          <% end %>
        </ul>
    <% end %>
      <div class="card-panel">
        <%= form_for :admin, class: 'col s12', url: '/admins' do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <%= f.text_field :first_name, id: 'first_name', class: 'validate' %><br>
                <%= f.label :first_name %>
              </div>
              <div class="input-field col s6">
                <%= f.text_field :last_name, id: 'last_name', class: 'validate' %><br>
                <%= f.label :last_name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, class: 'validate' %>
                <%= f.label :email %><br>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, class: 'validate' %>
                <%= f.label :password %><br>
              </div>
            </div>
            <div class="row">
              <%= f.submit 'Register', class: 'btn waves-effect waves-light right' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>